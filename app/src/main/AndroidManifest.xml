<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Guru2"
        tools:targetApi="31">

        <!-- MainActivity를 런처 액티비티로 설정합니다. -->
        <activity
            android:name=".Auth.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 기존의 HomeActivity, LoginDialog, JoinDialog도 그대로 추가합니다. -->
        <activity android:name=".Board.HomeActivity" />

        <activity android:name=".Auth.LoginDialog"
            tools:ignore="Instantiatable" />

        <activity android:name=".Auth.JoinDialog"
            tools:ignore="Instantiatable" />

        <activity
            android:name="com.example.guru2.Board.DeliveryActivity"
            android:label="Delivery Activity" />

        <activity
            android:name="com.example.guru2.Board.PurchaseActivity"
            android:label="Purchase Activity" />


    </application>

</manifest>